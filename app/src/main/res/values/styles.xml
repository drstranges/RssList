<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemImage">
        <item name="android:layout_width">@dimen/item_picture_size</item>
        <item name="android:layout_height">@dimen/item_picture_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ItemTitleText" parent="ItemText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ItemSubtitleText" parent="ItemText">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ItemText">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
